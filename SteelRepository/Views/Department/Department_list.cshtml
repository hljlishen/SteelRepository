@model List<Models.Department>
@{
    Layout = "~/Views/Login/AdminIndex.cshtml";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <link href="~/Content/AdminIndex/css/vendor/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/vendor/responsive.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/icons.min.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/app.min.css" rel="stylesheet" />
    <script type="text/javascript">
        function DepartmentAdd() {
            var url = "Department_add";
            var width = "100%";
            var height = "700px";
            parent.OpenWin(url, width, height);
        }
        function DepartmentUpdate(id) {
            var url = "Department_Update?id=" + id;
            var width = "100%";
            var height = "700px";
            parent.OpenWin(url, width, height);
        }
        function DepartmentSelect(id) {
            var url = "Department_Select?id=" + id;
            var width = "100%";
            var height = "780px";
            parent.OpenWin2(url, width, height);
        }
        function DepartmentDelete(id) {
            var flag = confirm("是否要删除信息？");
        if (flag) {
            $.ajax({
                url: "@Url.Action("Department_Delete")",
                type: "post",
                data: {
                    "id": id
                },
                dataType: "json",
                success: function (data) {
                    data = eval("(" + data + ")");
                    if (data) {
                        alert("删除成功！");
                        parent.openFrame("Department_list");
                    } else {
                        alert("删除失败！");
                    }
                }
            });
        }
        }
    </script>
</head>

<div class="content-page">
    <div class="content">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">部门信息</a></li>
                            <li class="breadcrumb-item active">部门信息管理</li>
                        </ol>
                    </div>
                    <h4 class="page-title">部门信息管理</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <a href="javascript:DepartmentAdd()" class="btn btn-danger mb-2"><i class="mdi mdi-plus-circle mr-2"></i>新增部门</a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-centered table-striped dt-responsive nowrap w-100" id="products-datatable2">
                                <thead>
                                    <tr>
                                        <th style="width: 20px;">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                <label class="custom-control-label" for="customCheck1">&nbsp;</label>
                                            </div>
                                        </th>
                                        <th>编号</th>
                                        <th>部门名称</th>
                                        <th>在职人员</th>
                                        <th style="width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int count = 1; }
                                    @foreach (var department in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck2">
                                                    <label class="custom-control-label" for="customCheck2">&nbsp;</label>
                                                </div>
                                            </td>
                                            <td class="table-user">@count</td>
                                            <td>@department.departmentName</td>
                                            <td>@Models.Department.GetEmployee(department.id).Count()</td>
                                            <td>
                                                <a href="javascript:DepartmentDelete(@department.id);" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                                <a href="javascript:DepartmentUpdate(@department.id)" class="action-icon"> <i class="dripicons-pencil"></i></a>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>