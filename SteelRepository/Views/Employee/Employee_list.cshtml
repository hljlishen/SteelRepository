@model List<Models.Employee>
@{
    Layout = "~/Views/Login/AdminIndex.cshtml";
}
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <link href="~/Content/AdminIndex/css/vendor/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/vendor/responsive.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/app.min.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/icons.min.css" rel="stylesheet" />

    <script type="text/javascript">
        function EmployeeAdd() {
             var url = "Employee_add";
             var width = "100%";
             var height = "700px";
             parent.OpenWin(url, width, height);
        }

        function EmployeeUpdate(id) {
             var url = "Employee_update?id="+id;
             var width = "100%";
             var height = "500px";
             parent.OpenWin(url, width, height);
        }

        function EmployeeSelect(id) {
             var url = "Employee_select?id="+id;
             var width = "100%";
             var height = "400px";
             parent.OpenWin(url, width, height);
        }

        function EmployeeDelete(id) {
            var flag = confirm("是否要删除信息？");
        if (flag) {
            $.ajax({
                url: "@Url.Action("Employee_delete")",
                type: "post",
                data: {
                    "id": id
                },
                dataType: "json",
                success: function (data) {
                    data = eval("(" + data + ")");
                    if (data) {
                        alert("删除成功！");
                        parent.openFrame("Employee_list");
                    } else {
                        alert("删除失败！");
                    }
                }
            });
        }
        }
    </script>
</head>
<div class="content-page">
    <div class="content">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">员工信息</a></li>
                            <li class="breadcrumb-item active">员工信息管理</li>
                        </ol>
                    </div>
                    <h4 class="page-title">员工信息管理</h4>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <a href="javascript:EmployeeAdd()" class="btn btn-danger mb-2"><i class="mdi mdi-plus-circle mr-2"></i>添加员工信息</a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-centered table-striped dt-responsive nowrap w-100" id="products-datatable">
                                <thead>
                                    <tr>
                                        <th style="width: 20px;">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                <label class="custom-control-label" for="customCheck1">&nbsp;</label>
                                            </div>
                                        </th>
                                        <th>编号</th>
                                        <th>姓名</th>
                                        <th>账号</th>
                                        <th>所属部门</th>
                                        <th>权限</th>
                                        <th>状态</th>
                                        <th style="width: 75px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int count = 1; }
                                    @foreach (var employee in Model) {
                                    <tr>
                                        <td>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="customCheck2">
                                                <label class="custom-control-label" for="customCheck2">&nbsp;</label>
                                            </div>
                                        </td>
                                        <td class="table-user">@count</td>
                                        <td>@employee.name</td>
                                        <td>@employee.number</td>
                                        <td>@employee.departmentId</td>
                                        @if (employee.permissions.ToString() == "1")
                                        {
                                            <td>一级管理员</td>
                                        }
                                        else if (employee.permissions.ToString() == "2")
                                        {
                                            <td>二级管理员</td>
                                        }
                                        else
                                        {
                                            <td>三级管理员</td>
                                        }
                                        <td>@employee.state</td>
                                        <td>
                                            <a href="javascript:EmployeeDelete(@employee.id)" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                            <a href="javascript:EmployeeUpdate(@employee.id)" class="action-icon"> <i class="dripicons-pencil"></i></a>
                                            <a href="javascript:EmployeeSelect(@employee.id)" class="action-icon"> <i class="mdi mdi-calendar-text-outline"></i></a>
                                        </td>
                                    </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
