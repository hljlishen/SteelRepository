<script type="text/javascript">

    UpdateWebClickNumber();
    var refresh = "";
    function UpdateWebClickNumber() {
        $.ajax({
                url: "@Url.Action("GetNowWebClickData")",
                type: "post",
                success: function (data) {
                    if (data) {
                            var obj = document.getElementById("accessnumber");
                            obj.innerHTML = data["administratorVisits"];

                            var obj = document.getElementById("clicknumber");
                            obj.innerHTML = data["totalVisits"];
                    } else {
                        alert("数据获取失败！");
                    }
                }
        });
    }
    refresh = setInterval(function () {
        UpdateWebClickNumber();
    }, 10000);

    UpdateShow();
    var refreshtable = "";
    //选择年份
    function UpdateShow() {
        $.ajax({
                url: "@Url.Action("GetWebClickData")",
                type: "post",
            success: function (data) {
                    if (data) {
                        DataShow(data);
                    } else {
                        alert("数据获取失败！");
                    }
                }
        });
    }
    refreshtable = setInterval(function () {
        UpdateShow();
    }, 10000);
    //统计图展示
    function DataShow(clicknumber1) {
        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('container'));

        // 指定图表的配置项和数据
        option = {
            title: {
                text: '站点访问人次折线图'
            },
            tooltip: {
                trigger: 'axis'
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            toolbox: {
                feature: {
                    saveAsImage: {}
                }
            },
            xAxis: {
                type: 'category',
                boundaryGap: false,
                data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
            },
            yAxis: {
                type: 'value'
            },
            series: [
                {
                    name: '访问人次',
                    type: 'line',
                    stack: '总量',
                    data:clicknumber1
                }
            ]
        };
        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }
    }


    getTreeData();

    function getTreeData() {
        layui.use('tree', function () {
           var tree = layui.tree;

            $.ajax({
                //async: false,
                type: "post",
                url: '@Url.Action("Trees")',
                datatype: "json",
                contenttype: "application/json; charset=utf-8",
