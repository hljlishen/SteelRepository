                                data: jdata,
                                isopen: true, //false初始关闭，true打开
                                accordion: true,
                            });
                }
            });
        });
    }
</script>
<script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例

    $(function () {
        getData4();
    });
    function getData4() {
        $.ajax({
            type: 'post',
            dataType: 'text',
            url: '@Url.Action("PieChart")',
            data: {},
            cache: false,
            async: true,
            success: function (data) {
                var data = eval('(' + data + ')');
                var data1 = new Array();
                for (var i = 0; i < data.mapName.length; i++) {
                    data1[i] = { value: data.mapValue[i], name: data.mapName[i] }
                }
                var myChart = echarts.init(document.getElementById('pieChart'));

                // 指定图表的配置项和数据
                option = {
                    title: {
                        text: '库存余量',
                        x: 'center'
                    },
                    tooltip: {
                        trigger: 'item',
                        formatter: "{a} <br/>编号：{b} ； 余量：{c} ({d}%)"
                    },
                    legend: {
                        orient: 'vertical',
                        left: 'left',
                        data: data1
                    },
                    series: [
                        {
                            name: '库存余量 单位：kg',
                            type: 'pie',
                            radius: '55%',
                            center: ['50%', '60%'],
                            data: data1,
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                                }
                            }
                        }
                    ]
                };
                // 使用刚指定的配置项和数据显示图表。
                myChart.setOption(option);
            }
        });
    }
</script>

