@model List<Models.OutCome>
@{
    Layout = "~/Views/AdminIndex/AdminIndex.cshtml";
}

<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <link href="~/Content/AdminIndex/css/vendor/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/vendor/responsive.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/icons.min.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/app.min.css" rel="stylesheet" />
    <script src="~/Content/AdminIndex/js/app.min.js"></script>

    <script type="text/javascript">
        function OutComeMore(id) {
            var url = "OutCome_More?id=" + id;
            var width = "100%";
            var height = "400px";
            parent.OpenWin(url, width, height);
        }
    </script>
    <style>
        select {
            border: solid 1px #000;
            appearance: none;
            -moz-appearance: none;
            -webkit-appearance: none;
            background: url("下拉箭头图片") right center no-repeat;
            padding-right: 20px;
        }
            select::-ms-expand {
                display: none;
            }
    </style>
</head>
@{
    List<Models.MaterialCode> material = (List<Models.MaterialCode>)ViewData["MaterialCode"];
}
@{
    List<Models.Employee> employee = (List<Models.Employee>)ViewData["employee"];
}
@{
    List<Models.OutCome> outcomelist = (List<Models.OutCome>)ViewData["outcome"];
}
<div class="content-page">
    <div class="content">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">货物出库</a></li>
                            <li class="breadcrumb-item active">货物出库管理</li>
                        </ol>
                    </div>
                    <h4 class="page-title">货物出库管理</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <h4 class="page-title">详细查询</h4>
                                </div>
                            </div>
                        </div>
                        <div style="width:100%;text-align:center">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="post" action="/OutCome/OutCome_list" style="width:100%;text-align:center">
                                        <div class="form-group mb-3">
                                            <table contenteditable="inherit" style="width:100%;text-align:center">
                                                <tr>
                                                    <td>
                                                        <label for="example-date" style="width:100%;text-align:left">开始时间</label>
                                                        <input class="form-control" id="date" type="date" name="date" style="width:200px">
                                                    </td>
                                                    <td>
                                                        <label for="example-date" style="width:100%;text-align:left">结束时间</label>
                                                        <input class="form-control" id="date1" type="date" name="date1" style="width:200px">
                                                    </td>
                                                    <td>
                                                        <label style="width:100%;text-align:left">借用人查询</label>
                                                        <select name="employeeid" style="width:200px;height:40px" class="form-control">
                                                            <option value="0">请选择</option>
                                                            @foreach (var emp in employee)
                                                            {
                                                                <option value="@emp.id">@emp.name</option>
                                                            }
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <label style="width:100%;text-align:left">货品编号查询</label>
                                                        <select name="materialCodeid" style="width:200px;height:40px" class="form-control">
                                                            <option value="0">请选择</option>
                                                            @foreach (var emp in material)
                                                            {
                                                                <option value="@emp.id">@emp.code</option>
                                                            }
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <div class="button-list">
                                                            <button type="submit" style="width:60px;height:50px; float:unset" class="btn btn-primary"
                                                                    data-toggle="modal" data-target=".signin_modal">
                                                                查询
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <a href="/OutCome/OutCome_list" class="btn btn-danger mb-2"><i class="mdi mdi-plus-circle mr-2"></i>显示全部</a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-centered table-striped dt-responsive nowrap w-100" id="products-datatable3">
                                <thead>
                                    <tr>
                                        <th style="width: 20px;">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                <label class="custom-control-label" for="customCheck1">&nbsp;</label>
                                            </div>
                                        </th>
                                        <th>编号</th>
                                        <th>货品编号</th>
                                        <th>货品名称</th>
                                        <th>货品类别</th>
                                        <th>货品出库数量</th>
                                        <th>货品单位</th>
                                        <th>货品单价</th>
                                        <th>货品总价</th>
                                        <th>货品出库时间</th>
                                        <th>货品借用人</th>
                                        <th style="width: 125px;">更多</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int count = 1; }
                                    @foreach (var outComes in outcomelist)
                                    {
                                        <tr>
                                            <td>
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck2">
                                                    <label class="custom-control-label" for="customCheck2">&nbsp;</label>
                                                </div>
                                            </td>
                                            <td class="table-user">@count</td>
                                            <td>@Models.OutCome.GetMaterCodeName(outComes.inventoryId)</td>
                                            <td>@Models.OutCome.GetNameName(outComes.inventoryId)</td>
                                            <td>@Models.OutCome.GetModelName(outComes.inventoryId)</td>
                                            <td>@outComes.number</td>
                                            <td>@outComes.unit</td>
                                            <td>@Models.OutCome.GetInComeunitPrice(outComes.inventoryId)</td>
                                            <td>@outComes.price</td>
                                            <td>@outComes.recipientsTime.ToString("d")</td>
                                            <td>@Models.OutCome.GetEmployeeName(outComes.borrowerId)</td>
                                            <td>
                                                <a href="javascript:OutComeMore(@outComes.id)" class="action-icon"> <i class="mdi mdi-calendar-text-outline"></i></a>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

