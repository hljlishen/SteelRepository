@model Models.Employee
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&amp;subset=devanagari,latin-ext" rel="stylesheet">
    <title>用户注册</title>
    <link href="~/Content/Login/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Login/css/animate.css" rel="stylesheet" />
    <link href="~/Content/Login/css/responsive.css" rel="stylesheet" />
    <link href="~/Content/Login/css/style.css" rel="stylesheet" />
    <link href="~/Content/Login/css/responsive.css" rel="stylesheet" />
    <link href="~/Content/Login/css/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript">
        function Registered() {
             $.ajax({
                url: "@Url.Action("UserRegistered")",
                type: "post",
                data: $("form").serialize(),
                dataType: "json",
                success: function (data) {
                    data = eval("(" + data + ")");
                    if (data) {
                        alert("注册成功");
                        parent.closeWin();
                        parent.openFrame("../Inventory/Inventory");
                    } else {
                        
                    }
                }
            });
        }
    </script>
</head>
<body>
    <section class="signin popup-in">
        <div class="container">
            <div class="sign-content popup-in-content">
                <div class="popup-in-txt">
                    <h2>用户注册</h2>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="signin-form">
                                @using (Html.BeginForm("UserRegistered", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @role = "form" }))
                                {
                                    <div class="form-group">
                                        <label for="signin_form">姓名：</label>
                                        @Html.TextBoxFor(m => m.name, new { @class = "form-control", placeholder = "请输入姓名", id = "signin_form", type = "text" })
                                    </div>
                                    <div class="form-group">
                                        <label for="signin_form">账号：</label>
                                        @Html.TextBoxFor(m => m.number, new { @class = "form-control", placeholder = "请输入账号", id = "signin_form", type = "text" })
                                    </div>
                                    <div class="form-group">
                                        <label for="signin_form">密码：</label>
                                        @Html.TextBoxFor(m => m.password, new { @class = "form-control", placeholder = "请输入密码", id = "signin_form", type = "password" })
                                    </div>
                                    <div class="form-group">
                                        <label for="signin_form">重复密码：</label>
                                        <input class = "form-control" placeholder = "请输入密码" id = "signin_form" type = "password">
                                    </div>
                                    <div class="form-group">
                                        <label for="signin_form">所属部门：</label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.departmentId, new { @class = "form-control", type = "text", placeholder = "请选择部门" })
                                            <div class="input-group-append">
                                                <button class="btn btn-dark" type="button">选择</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="signin-footer">
                                <button type="button" class="btn signin_btn signin_btn_two" data-toggle="modal" data-target=".signin_modal" onclick="Registered()">
                                    注册
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Content/Login/js/jquery.js"></script>
    <script src="~/Content/Login/js/modernizr.min.js"></script>
    <script src="~/Content/Login/js/bootstrap.min.js"></script>
    <script src="~/Content/Login/js/bootsnav.js"></script>
    <script src="~/Content/Login/js/jquery.sticky.js"></script>
    <script src="~/Content/Login/js/jquery.easing.min.js"></script>
    <script src="~/Content/Login/js/custom.js"></script>
</body>
</html>