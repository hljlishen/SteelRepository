@{
    Layout = "~/Views/Login/AdminIndex.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    @{
        List<Models.Name> names = Models.Name.SelectAll();
      }
    <meta charset="utf-8" />
    <title>库存信息</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <link href="~/Content/AdminIndex/css/vendor/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/vendor/responsive.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/app.min.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/icons.min.css" rel="stylesheet" />
    <script src="~/Content/Inventory/js/jquery-3.1.1.js"></script>
    <style>
        select {
            border: solid 1px #000;
            /*appearance: none;*/
            -moz-appearance: none;
            -webkit-appearance: none;
            background: url("下拉箭头图片") right center no-repeat;
            padding-right: 20px;
        }

            select::-ms-expand {
                display: none;
            }
    </style>
    <script type="text/javascript">
        function aa() {
            function OutComeAdd() {
                var url = "OutCome_add";
                var width = "100%";
                var height = "700px";
                parent.OpenWin2(url, width, height);
            }
        }
    </script>
</head>
<body>
    @{
        List<Models.Inventory> inventorylist = (List<Models.Inventory>)ViewData["Inventorylist"];
        List<Models.MaterialCode> material = (List<Models.MaterialCode>)ViewData["MaterialCode"];
    }
    <div class="content-page">
        <div class="content">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">库存信息</a></li>
                            <li class="breadcrumb-item active">库存信息管理</li>
                        </ol>
                    </div>
                    <h4 class="page-title">库存信息管理</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <a href="javascript:OutComeAdd()" class="btn btn-danger mb-2"><i class="mdi mdi-plus-circle mr-2"></i>新增出库</a>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-12">
                                    <div class="page-title-box">
                                        <h4 class="page-title">库存详细查询</h4>
                                    </div>
                                </div>
                            </div>
                            <div style="width:100%;text-align:center">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form method="post" action="/Inventory/Inventory_list" style="width:100%;text-align:center">
                                            <div class="form-group mb-3">
                                                <table contenteditable="inherit" style="width:100%;text-align:center">
                                                    <tr>
                                                        <td>
                                                            <label style="width:100%;text-align:left">货品编号查询</label>
                                                            <input id="codeinput" name="codeinput" list="codelist" style="width:200px;height:40px" class="form-control" placeholder="请选择或输入编号" onchange="aa()"/>
                                                            <datalist id="codelist">
                                                                @foreach (var emp in material)
                                                                {
                                                                    <option>@emp.code</option>
                                                                }
                                                            </datalist>
                                                        </td>
                                                        <td>
                                                            <label style="width:100%;text-align:left">材料名称查询</label>
                                                            <input id="nameinput" name="nameinput" list="namelist" style="width:200px;height:40px" class="form-control" placeholder="请选择或输入名称" />
                                                            <datalist id="namelist">
                                                                @foreach (var name in names)
                                                                {
                                                                    <option>@name.materialName</option>
                                                                }
                                                            </datalist>
                                                        </td>
                                                        <td>
                                                            <label for="example-date" style="width:100%;text-align:left">入库开始时间</label>
                                                            <input class="form-control" id="date" type="date" name="date" style="width:200px">
                                                        </td>
                                                        <td>
                                                            <label for="example-date" style="width:100%;text-align:left">结束时间</label>
                                                            <input class="form-control" id="date1" type="date" name="date1" style="width:200px">
                                                        </td>
                                                        <td>
                                                            <div class="button-list">
                                                                <button type="submit" style="width:60px;height:50px; float:unset" class="btn btn-primary"
                                                                        data-toggle="modal" data-target=".signin_modal">
                                                                    查询
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <a href="/Inventory/Inventory_list" class="btn btn-danger mb-2"><i class="mdi mdi-plus-circle mr-2"></i>显示全部</a>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="page-title-box">
                                        <h4 class="page-title">库存信息</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-centered table-striped dt-responsive nowrap w-100" id="products-datatable4">
                                    <thead>
                                        <tr>
                                            <th style="width: 20px;">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                    <label class="custom-control-label" for="customCheck1">&nbsp;</label>
                                                </div>
                                            </th>
                                            <th>编号</th>
                                            <th>货品编号</th>
                                            <th>货品名称</th>
                                            <th>货品类别</th>
                                            <th>货品余量</th>
                                            <th>货品单位</th>
                                            <th>货品仓位</th>
                                            <th>货品入库时间</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int count = 1; }
                                        @foreach (var inventory in inventorylist)
                                        {
                                            if (Models.Inventory.GetSurpius(inventory.incomeId, inventory.id) > 0)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" id="customCheck2">
                                                            <label class="custom-control-label" for="customCheck2">&nbsp;</label>
                                                        </div>
                                                    </td>
                                                    <td class="table-user">@count</td>
                                                    <td>@Models.Inventory.GetMaterCodeName(inventory.incomeId)</td>
                                                    <td>@Models.Inventory.GetNameName(inventory.incomeId)</td>
                                                    <td>@Models.Inventory.GetModelName(inventory.incomeId)</td>
                                                    <td>@inventory.amount</td>
                                                    <td>@inventory.unit</td>
                                                    <td>@Models.Inventory.GetPositionName(inventory.positionId)</td>
                                                    <td>@Models.Inventory.GetInComeTime(inventory.incomeId).ToString("d")</td>
                                                </tr>
                                                count++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>




                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
