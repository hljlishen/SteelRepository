@model List<Models.Inventory>
@{ 
     Layout = "~/Views/AdminIndex/Index1.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Content/AdminIndex/css/vendor/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/vendor/responsive.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/app.min.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/icons.min.css" rel="stylesheet" />
    <script src="~/Content/Excel/Excel.js"></script>
    <script type="text/javascript">

    </script>
</head>
<body>
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title" style="text-align:center">余量提醒</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="l-button">
                        <a href="javascript:export_excel('products-datatable9')" class="side-nav-link">
                            <i class=" dripicons-export "></i>
                            <span> 导出Excel </span>
                        </a>
                    </div>
                    <div class="table-responsive" id="myDiv">
                        <table class="table table-centered table-striped dt-responsive nowrap w-100" id="products-datatable9">
                            <thead>
                                <tr>
                                    <th style="width: 20px;">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                                            <label class="custom-control-label" for="customCheck1">&nbsp;</label>
                                        </div>
                                    </th>
                                    <th>编号</th>
                                    <th>材料编号</th>
                                    <th>材料名称</th>
                                    <th>材料规格</th>
                                    <th>材料类别</th>
                                    <th>批号</th>
                                    <th>存放位置</th>
                                    <th>剩余量</th>
                                    <th>单位</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var count = 1;}
                                @if (Model != null)
                                {
                                    foreach (var inv in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck2">
                                                    <label class="custom-control-label" for="customCheck2">&nbsp;</label>
                                                </div>
                                            </td>
                                            <td>@count</td>
                                            <td>@Models.Inventory.GetMaterCodeName(inv.incomeId)</td>
                                            <td>@Models.Inventory.GetNameName(inv.incomeId)</td>
                                            <td>@Models.Inventory.GetModelName(inv.incomeId)</td>
                                            <td>@Models.Inventory.GetCategoryName(inv.incomeId).categoryName</td>
                                            <td>@Models.Inventory.IncomeIdGetInCome(inv.incomeId).batch</td>
                                            <td>@Models.Inventory.GetPositionName(inv.positionId)</td>
                                            <td style="color:#ff0000">@inv.amount</td>
                                            <td>@inv.unit</td>
                                        </tr>
                                        count++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>