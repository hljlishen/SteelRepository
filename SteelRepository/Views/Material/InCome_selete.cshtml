@model List<Models.RecheckReportImgView>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/AdminIndex/css/app.min.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/icons.min.css" rel="stylesheet" />
    <script src="~/Content/AdminIndex/js/app.min.js"></script>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" media="all" />
    <script src="~/Content/layui/layui.js" charset="utf-8"></script>
    <link href="~/Content/image/preview.css" rel="stylesheet" />
    <script src="~/Content/image/preview.js"></script>
    @{
        Models.InComeView inCome = (Models.InComeView)ViewData["InComeView"];
    int id2 = (int)ViewData["id2"];
        double Amount = (double)ViewData["InventoryAmount"];
    }
    <script type="text/javascript">


/**/</script>

    <style type="text/css">
        #wrap img {
            vertical-align: top;
            cursor: pointer;
        }

        #wrap2 img {
            vertical-align: top;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <section class="signin popup-in">
        <div class="container">
            <div class="sign-content popup-in-content">
                <div class="popup-in-txt">
                    <h2 style="text-align:center">材料信息</h2>
                    <div class="row">
                        <div class="col-12">
                            <div class="signin-form">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">名称：</label>
                                        <input class="form-control" name="name1" type="text" value="@inCome.materialName" disabled="disabled" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">规格：</label>
                                        <input class="form-control" name="model" type="text" value="@inCome.modelName" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">类别：</label>
                                        <input class="form-control" name="category" type="text" value="@inCome.categoryName" disabled="disabled" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">编号：</label>
                                        <input class="form-control" name="materialCode" type="text" value="@inCome.code" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">批号：</label>
                                        <input class="form-control" name="batch" type="text" value="@inCome.batch" disabled="disabled" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">牌号：</label>
                                        <input class="form-control" name="brandCodeName" type="text" value="@inCome.brandCodeName" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">单价（元）：</label>
                                        <input class="form-control" name="unitPrice" type="text" value="@inCome.unitPrice" disabled="disabled" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">单价的单位：</label>
                                        <input class="form-control" name="unitPrice" type="text" value="@inCome.priceMeasure/元" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    @if(id2 == 1) { 
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">数量：</label>
                                        <input class="form-control" name="amount" type="text" value="@inCome.amount" disabled="disabled" />
                                    </div>
                                    }else {
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">数量：</label>
                                        <input class="form-control" name="amount" type="text" value="@Amount" disabled="disabled" />
                                    </div>
                                    }
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">计量单位：</label>
                                        <input class="form-control" name="unit" type="text" value="@inCome.unit" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">厂家：</label>
                                        <input class="form-control" name="menufacture" type="text" value="@inCome.manufacturersName" disabled="disabled" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">放置位置：</label>
                                        <input class="form-control" name="position" type="text" value="@inCome.positionName" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="layui-inline col-md-6 form-group">
                                        <label for="signin_form">入库时间:</label>
                                        <input class="form-control" name="IncomeText" type="text" value="@inCome.storageTime.ToString("d")" disabled="disabled" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">复检周期：</label>
                                        <input class="form-control" name="RecheckCycle" type="text" disabled="disabled" value="@inCome.reviewCycle" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="signin_form">操作人：</label>
                                        <input class="form-control" name="operator" type="text" value="@inCome.name" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="signin_form">产品质量证明：</label>
                                    <label for="signin_form">(点击图片查看，右键点击图片另存为下载图片)</label>
                                    <div class="layui-upload">
                                        <div class="layui-upload-list" id="wrap">
                                            <table class="layui-table">
                                                <thead>
                                                    <tr>
                                                        <th>预览图</th>
                                                        @*<th>操作</th>*@
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var img in Models.QualityCertificationReportImg.GetQualityCertificationReportImg(inCome.incoId))
                                                    {
                                                        <tr>
                                                            <th>
                                                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(img.img)" class="layui-upload-img" data-src="data:image/jpeg;base64,@Convert.ToBase64String(img.img)" width="200" heigth="200px">
                                                            </th>
                                                            @*<th><button class="layui-btn layui-btn-xs layui-btn-danger demo-delete">查看</button></th>*@
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="signin_form">复验结果报告：</label>
                                    <label for="signin_form">(点击图片查看，右键点击图片另存为下载图片)</label>
                                    <div class="layui-upload">
                                        <div class="layui-upload-list" id="wrap2">
                                            <table class="layui-table">
                                                <thead>
                                                    <tr>
                                                        <th>预览图</th>
                                                        <th>复检依据</th>
                                                        <th>复检时间</th>
                                                        @*<th>操作</th>*@
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{ string recheckOrderNo = "";}
                                                    @foreach (var recheck in Model)
                                                    {
                                                        if (recheckOrderNo != recheck.recheckOrderNo)
                                                        {
                                                            <tr>
                                                                <th>
                                                                    <label for="signin_form">复检单号：</label>
                                                                    <label for="signin_form">@recheck.recheckOrderNo</label>
                                                                </th>
                                                            </tr>
                                                            recheckOrderNo = recheck.recheckOrderNo;
                                                        }
                                                        <tr>
                                                            <th>
                                                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(recheck.img)" class="layui-upload-img" data-src="data:image/jpeg;base64,@Convert.ToBase64String(recheck.img)" width="200" heigth="200px">
                                                            </th>
                                                            <th>@recheck.recheckBasis</th>
                                                            <th>@recheck.recheckTime.ToString("d")</th>
                                                            @*<th>

                                                            </th>*@
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        var preview = new Preview({
            imgWrap: 'wrap' // 指定该容器里的图片点击预览
        })

        var preview = new Preview({
            imgWrap: 'wrap2' // 指定该容器里的图片点击预览
        })
    </script>
</body>
</html>