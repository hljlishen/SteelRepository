
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/AdminIndex/css/app.min.css" rel="stylesheet" />
    <link href="~/Content/AdminIndex/css/icons.min.css" rel="stylesheet" />
    <script src="~/Content/AdminIndex/js/app.min.js"></script>
    <script type="text/javascript">
        function update() {
            $.ajax({
                url: "@Url.Action("Manufacturer_update")",
                type: "post",
                data: $("form").serialize(),
                dataType: "json",
                success: function (data) {
                    data = eval("(" + data + ")");
                    if (data) {
                        alert("修改成功");
                        parent.closeWin();
                        parent.openFrame("Manufacturer_list");
                    } else {
                    }
                }
            });
        }
    </script>
</head>
<body>
    @{
        Models.Manufacturer manufacturer = (Models.Manufacturer)ViewData["Manufacturer"];
    }
    <section class="signin popup-in">
        <div class="container">
            <div class="sign-content popup-in-content">
                <div class="popup-in-txt">
                    <h2>修改厂商信息</h2>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="signin-form">
                                @using (Html.BeginForm("Manufacturer_update", "Manufacturer", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @role = "form" }))
                                {
                                    <div class="form-group">
                                        <label for="signin_form">厂家名称：</label>
                                        <div class="input-group">
                                            @Html.TextBox("manufacturersName", manufacturer.manufacturersName, new { @class = "form-control", type = "text" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="signin_form">联系方式：</label>
                                        <div class="input-group">
                                            @Html.TextBox("contact", manufacturer.contact, new { @class = "form-control", type = "text" })
                                            
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="signin_form">地址：</label>
                                        <div class="input-group">
                                            @Html.TextBox("address", manufacturer.address, new { @class = "form-control", type = "text" })
                                            
                                        </div>
                                    </div>
                                }
                            </div>
                                </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="signin-footer">
                                <button type="button" class="btn btn-primary" onclick="update();">
                                    修改
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>